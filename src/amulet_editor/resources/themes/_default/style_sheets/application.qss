/* ------------------------------------------------------- */
/* ----- Qt Style Sheet - Widget Specific Properties ----- */
/* ------------------------------------------------------- */

QMainWindow {{
    background-color: "{background}";
    color: "{on_background}";
}}

QComboBox {{
    background-color: "{primary}";
    border: 1px solid "{surface}";
    border-radius: 3px;
    color: "{on_background}";
    min-width: 6em;
    padding: 1px 18px 2px 7px;
    selection-background-color: "{surface}";
}}
QComboBox:editable {{
    background-color: "{primary}";
}}
QComboBox:!editable, QComboBox::drop-down:editable {{
    background-color: "{primary}";
}}
QComboBox:!editable:on, QComboBox::drop-down:editable:on {{
    background-color: "{primary}";
}}
QComboBox:on {{
    padding-top: 3px;
    padding-left: 7px;
}}
QComboBox::drop-down {{
    border-left: 1px solid "{surface}";
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
}}
QComboBox QAbstractItemView {{
    background-color: "{primary}";
    border: 1px solid "{surface}";
    border-radius: 3px;
}}

QLabel {{
    background: transparent;
    color: "{on_primary}";
}}

QLabel[heading="h1"] {{
    font-size: 26pt;
}}
QLabel[heading="h2"] {{
    font-size: 22pt;
}}
QLabel[heading="h3"] {{
    font-size: 20pt;
}}
QLabel[heading="h4"] {{
    font-size: 14pt;
}}
QLabel[heading="h5"] {{
    font-size: 12pt;
}}

QHoverLabel {{
    background-color: "{primary}";
    color: "{on_primary}";
    border-bottom: 1px solid "{background}";
    border-left: 3px solid "{secondary}";
    border-right: 1px solid "{background}";
    border-top: 1px solid "{background}";
    font: bold 10pt "{font_family}";
}}

QLineEdit {{
    background-color: "{primary}";
    border-bottom: 2px solid "{surface}";
    border-left: 1px solid "{surface}";
    border-top: 1px solid "{surface}";
    border-right: 1px solid "{surface}";
    border-radius: 3px;
    color: "{on_primary}";
}}
QLineEdit:focus {{
    border-bottom: 2px solid "{secondary}";
    border-radius: 3px;
}}
QLineEdit[readOnly=true]:focus {{
    border-bottom: 2px solid "{surface.lighter.100}";
    border-radius: 3px;
}}

QMenuBar {{
    background-color: "{surface}";
    border: none;
    color: "{on_surface}";
    font: bold 9pt "{font_family}";
    spacing: 0px;
}}
QMenuBar::item {{
    border: none;
    margin-left: 9px;
    margin-right: 9px;
    margin-top: 5px;
    margin-bottom: 5px;
}}
QMenuBar::item:selected {{
    border: none;
    background-color: "{secondary_variant}";
    color: "{on_secondary}";
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 0px;
    margin-bottom: 0px;
}}

QMenu {{
    background-color: "{primary}";
    border: 1px solid "{background}";
    color: "{on_primary}";
    font: 9pt "{font_family}";
    selection-background-color: "{secondary_variant}";
}}
QMenu::separator {{
    height: 1px;
    background-color: "{primary.darker.50}";
    color: "{on_primary}";
    margin-left: 5px;
    margin-right: 5px;
}}
QMenu::item {{
    background-color: "{primary}";
    padding: 4px 24px 4px 28px;
    border: 1px transparent "{background}";
}}
QMenu::item::selected {{
    color: "{on_secondary}";
    background-color: "{secondary_variant}";
}}
QMenu::item::pressed {{
    background-color: "{secondary_variant}";
}}
QMenu::item::disabled {{
    color: "{on_primary.darker.50}";
}}
QMenu::icon {{
  padding-left: 10px;
  width: 14px;
  height: 14px;
}}
QMenu::indicator {{
  padding-left: 8px;
  width: 12px;
  height: 12px;
}}

QPlainTextEdit {{
    background-color: "{background}";
    color: "{on_background}";
}}
QPlainTextEdit[readOnly=true] {{
    color: "{on_surface}";
}}

QPushButton {{
    background-color: "{primary.lighter.5}";
    border: 1px solid "{surface}";
    border-radius: 3px;
    color: "{on_primary}";
    padding-bottom: 5px;
    padding-left: 10px;
    padding-top: 5px;
    padding-right: 10px;
}}
QPushButton:checked {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{primary.darker.10}", stop: 1 "{primary.lighter.25}");
    border-bottom: 2px solid "{secondary}";
}}
QPushButton:hover {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{primary.lighter.10}", stop: 1 "{primary.lighter.25}");
}}
QPushButton:pressed {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{primary.darker.10}", stop: 1 "{primary.lighter.25}");
    border: 1px solid "{surface.darker.10}";
    border-bottom: 2px solid "{secondary}";
}}
QPushButton[backgroundColor="secondary"] {{
    background: "{secondary_variant.darker.25}";
    border: 1px solid "{secondary.darker.50}";
    color: "{on_secondary}";
}}
QPushButton[backgroundColor="secondary"]:checked {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{secondary_variant.darker.10}", stop: 1 "{secondary_variant}");
    border-bottom: 2px solid "{secondary}";
}}
QPushButton[backgroundColor="secondary"]:hover {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{secondary_variant.darker.10}", stop: 1 "{secondary_variant}");
}}
QPushButton[backgroundColor="secondary"]:pressed {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{secondary_variant.darker.25}", stop: 1 "{secondary_variant}");
    border: 1px solid "{secondary.darker.100}";
    border-bottom: 2px solid "{secondary}";
}}
QPushButton:!enabled {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{background}", stop: 1 "{background.lighter.15}");
    border: 1px solid "{surface}";
    color: "{on_surface}";
}}

QScrollBar {{
    background: transparent;
}}
QScrollBar::handle {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{primary.lighter.50}", stop: 1 "{primary.lighter.25}");
    border: 1px solid "{primary.lighter.100}";
    border-radius: 3px;
}}
QScrollBar::handle:hover {{
    background: QLinearGradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 "{primary.lighter.60}", stop: 1 "{primary.lighter.30}");
}}
QScrollBar::add-line:horizontal {{
    background: transparent;
    width: 0px;
}}
QScrollBar::sub-line:horizontal {{
    background: transparent;
    width: 0px;
}}
QScrollBar::add-line:vertical {{
    background: transparent;
    height: 0px;
}}
QScrollBar::sub-line:vertical {{
    background: transparent;
    height: 0px;
}}

QStatusBar {{
    background-color: "{secondary}";
}}

QTextEdit {{
    background-color: "{background}";
    color: "{on_background}";
}}
QTextEdit[readOnly=true] {{
    color: "{on_surface}";
}}

QToolButton {{
    background-color: "{surface}";
    color: "{on_surface}";
}}
QToolButton:checked {{
    background-color: "{secondary.darker.50}";
    color: "{on_secondary}";
}}
QToolButton:pressed {{
    background-color: "{surface}";
    color: "{on_surface}";
}}
AIconButton:checked
{{
    background-color: "{secondary.darker.50}";
    color: "{on_secondary}";
}}
AIconButton:pressed
{{
    background-color: "{primary}";
    color: "{on_primary}";
}}

QTreeView, QListView, QTableView, QColumnView {{
    background-color: "{primary}";
    border: none;
}}
QTreeView, QListView, QTableView, QColumnView::item {{
    background-color: "{primary}";
    color: "{on_primary}";
    border: none;
}}

QToolTip {{
    background-color: "{background}";
    color: "{on_background}";
}}

ALinkCard[hover="false"] > AStylableSvgWidget,
AIconButton[hover="false"] > AStylableSvgWidget,
AIconCard[hover="false"] > AStylableSvgWidget
{{
    background-color: "{on_surface}";
}}

ALinkCard[hover="true"] > AStylableSvgWidget,
AIconButton[hover="true"] > AStylableSvgWidget,
AIconCard[hover="true"] > AStylableSvgWidget
{{
    background-color: "{on_primary}";
}}

ALinkCard[hover="false"] > QElidedLabel,
AIconCard[hover="false"] > QElidedLabel
{{
    color: "{on_surface}";
}}

ALinkCard[hover="true"] > QElidedLabel,
AIconCard[hover="true"] > QElidedLabel
{{
    color: "{on_primary}";
}}
