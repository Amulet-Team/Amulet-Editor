/* ------------------------------------------------------- */
/* --------- Qt Style Sheet - Generic Properties --------- */
/* ------------------------------------------------------- */

* {{
    font-size: 9pt;
    font-family: "{font_family}";
}}
* [subfamily="extra_light"] {{
    font-family: "{font_family.extra_light}";
}}
* [subfamily="light"] {{
    font-family: "{font_family.light}";
}}
* [subfamily="semi_bold"] {{
    font-family: "{font_family.semi_bold}";
}}
* [subfamily="semi_light"] {{
    font-family: "{font_family.semi_light}";
}}

/* ------------------------------------------------------- */
/* --------- Qt Style Sheet - QWidget Properties --------- */
/* ------------------------------------------------------- */

QWidget {{
    background-color: "{background}";
}}

QWidget[backgroundColor="background"] {{
    background-color: "{background}";
    color: "{on_background}";
}}
QWidget[backgroundColor="primary"] {{
    background-color: "{primary}";
    color: "{on_primary}";
}}
QWidget[backgroundColor="surface"] {{
    background-color: "{surface}";
    color: "{on_surface}";
}}

QWidget[border="none"] {{
    border: none;
}}
QWidget[border="primary"] {{
    border: 1px solid "{primary}";
    padding: 1px;
}}
QWidget[border="on_primary"] {{
    border: 1px solid "{on_primary}";
    padding: 1px;
}}
QWidget[border="secondary"] {{
    border: 1px solid "{secondary}";
    padding: 1px;
}}
QWidget[border="on_secondary"] {{
